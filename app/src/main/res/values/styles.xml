<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/AppTheme.Base.ToolBar</item>
    </style>

    <style name="AppTheme.Base.ToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.Base.ToolBar.TitleTextAppearance</item>
    </style>

    <style name="AppTheme.Base.ToolBar.TitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:textColor">@android:color/primary_text_dark</item>
</style>

    <style name="MyToolBarStyle" parent="AppTheme.Base">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
